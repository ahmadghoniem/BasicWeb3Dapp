{
  "compilerOptions": {
    "lib": ["dom", "es2023"],
    "jsx": "react-jsx",
    "module": "Node16",
    "target": "es2022",
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
